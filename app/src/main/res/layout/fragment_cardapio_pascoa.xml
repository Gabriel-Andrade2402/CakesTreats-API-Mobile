<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayoutPascoa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#CD853F" />

            <!--Aqui inicia o Layout dos Ovos Simples-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutOvosSimples"
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="400dp"
                android:background="@drawable/rectangle_background"
                android:elevation="4dp"
                android:onClick="animationClick"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tituloOvoSimples"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ovo Simples"
                    android:textSize="14pt"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:elevation="10dp"
                    android:textAlignment="center"
                    android:background="@drawable/rectangle_background_titulo_pascoa"
                    app:layout_constraintBottom_toBottomOf="@+id/imagemPascoaOvoSimples"
                    app:layout_constraintEnd_toEndOf="@+id/imagemPascoaOvoSimples"
                    app:layout_constraintHorizontal_bias="0.219"
                    app:layout_constraintStart_toStartOf="@+id/imagemPascoaOvoSimples"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.081" />
                <ImageView
                    android:id="@+id/imagemPascoaOvoSimples"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ovo_simples"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0"
                    app:layout_constraintBottom_toBottomOf="@+id/imagemPascoaOvoSimples"
                    app:layout_constraintEnd_toEndOf="@+id/imagemPascoaOvoSimples"
                    app:layout_constraintStart_toStartOf="@+id/imagemPascoaOvoSimples"
                    app:layout_constraintTop_toTopOf="@+id/imagemPascoaOvoSimples"
                    app:srcCompat="@drawable/fundopreto" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--Aqui inicia o Layout dos Ovos Trufados-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutOvosTrufado"
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="400dp"
                android:onClick="animationClick"
                android:background="@drawable/rectangle_background"
                android:elevation="4dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tituloOvoTrufado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ovo Trufado"
                    android:textSize="14pt"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:elevation="10dp"
                    android:textAlignment="center"
                    android:background="@drawable/rectangle_background_titulo_pascoa"
                    app:layout_constraintBottom_toBottomOf="@+id/imagemPascoaOvoTrufado"
                    app:layout_constraintEnd_toEndOf="@+id/imagemPascoaOvoTrufado"
                    app:layout_constraintHorizontal_bias="0.219"
                    app:layout_constraintStart_toStartOf="@+id/imagemPascoaOvoTrufado"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.081" />
                <ImageView
                    android:id="@+id/imagemPascoaOvoTrufado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ovo_trufado"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imagemPretaOvoTrufado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0"
                    app:layout_constraintEnd_toEndOf="@+id/imagemPascoaOvoTrufado"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/imagemPascoaOvoTrufado"
                    app:layout_constraintTop_toTopOf="@+id/imagemPascoaOvoTrufado"
                    app:srcCompat="@drawable/fundopreto" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--Aqui inicia o Layout dos Ovos de colher-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutOvosDeColher"
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:onClick="animationClick"
                android:layout_height="400dp"
                android:background="@drawable/rectangle_background"
                android:elevation="13dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tituloOvoDeColher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ovo De Colher"
                    android:textSize="14pt"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:elevation="10dp"
                    android:textAlignment="center"
                    android:background="@drawable/rectangle_background_titulo_pascoa"
                    app:layout_constraintBottom_toBottomOf="@+id/imagemPascoaOvoDeColher"
                    app:layout_constraintEnd_toEndOf="@+id/imagemPascoaOvoDeColher"
                    app:layout_constraintHorizontal_bias="0.219"
                    app:layout_constraintStart_toStartOf="@+id/imagemPascoaOvoDeColher"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.081" />
                <ImageView
                    android:id="@+id/imagemPascoaOvoDeColher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ovo_de_colher"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imagemPretaOvoDeColher"
                    android:layout_width="wrap_content"
                    android:alpha="0"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/imagemPascoaOvoDeColher"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/imagemPascoaOvoDeColher"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/fundopreto" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:textSize="6pt"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Entre em contato para personalizados" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </LinearLayout>
    </ScrollView>



</FrameLayout>