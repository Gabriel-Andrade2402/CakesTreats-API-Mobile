<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frameLayoutBolos"
    tools:context=".fragments.CardapioBolos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#CD853F" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutBolo1"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="300dp"
                android:background="@drawable/rectangle_background"
                android:elevation="3dp"
                android:layout_marginBottom="10dp"
                android:onClick="animationClick">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/background_calda_branca"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/tituloBolo1"
                    android:layout_width="143dp"
                    android:layout_height="29dp"
                    android:fontFamily="@font/aldrich"
                    android:text="Bolos Tipo-1"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    app:layout_constraintBottom_toTopOf="@+id/descricaoBolo1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.101"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imagemBoloTipo1"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:id="@+id/imagemBoloTipo1"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/bolo_tipo2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.503"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.205" />

                <TextView
                    android:id="@+id/descricaoBolo1"
                    android:layout_width="235dp"
                    android:layout_height="34dp"
                    android:text="Bolos nos sabores Limão,Maracujá,Abacaxi,Morango...."
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.246"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imagemBoloTipo1"
                    app:layout_constraintVertical_bias="0.427" />

                <TextView
                    android:id="@+id/precoBolo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$50,00"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.064"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/descricaoBolo1"
                    app:layout_constraintVertical_bias="0.375" />

                <ImageView
                    android:id="@+id/imagemPreta1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fundopreto"
                    android:alpha="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutBolo2"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/rectangle_background"
                android:layout_gravity="center"
                android:onClick="animationClick"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:elevation="3dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/background_calda_preta1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/descricaoBolo2"
                    android:layout_width="239dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="4dp"
                    android:text="Bolos nos sabores Ninho com Morango/Abacaxi...."
                    app:layout_constraintBottom_toTopOf="@+id/precoBolo2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imagemBoloTipo2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/bolo_tipo1"
                    app:layout_constraintBottom_toTopOf="@+id/tituloBolo2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.183" />

                <TextView
                    android:id="@+id/tituloBolo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/aldrich"
                    android:text="Bolos tipo 2 "
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    app:layout_constraintBottom_toTopOf="@+id/descricaoBolo2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/precoBolo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="36dp"
                    android:text="R$55,00"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.064"
                    app:layout_constraintStart_toStartOf="parent"/>
                <ImageView
                    android:id="@+id/imagemPreta2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fundopreto"
                    android:alpha="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutBolo3"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rectangle_background"
                android:onClick="animationClick"
                android:elevation="3dp">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="500dp"
                    android:layout_height="500dp"
                    android:alpha="0.3"
                    android:src="@drawable/background_cenoura"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imagemBoloTipo3"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/bolo_tipo3"
                    app:layout_constraintBottom_toTopOf="@+id/tituloBolo3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.183"
                    />

                <TextView
                    android:id="@+id/tituloBolo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aldrich"
                    android:text="Bolos tipo 3"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    app:layout_constraintBottom_toTopOf="@+id/descricaoBolo3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.101"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imagemBoloTipo3"
                    app:layout_constraintVertical_bias="1.0"
                    />

                <TextView
                    android:id="@+id/descricaoBolo3"
                    android:layout_width="235dp"
                    android:layout_height="34dp"
                    android:text="Bolos nos sabores, Fubá com goiabada, Laranja,Milho,Beijinho,Brigadeiro,Limão...."
                    app:layout_constraintBottom_toTopOf="@+id/precoBolo3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <TextView
                    android:id="@+id/precoBolo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P-R$15,00  M-R$16,00 G-R$25,00"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.064"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <ImageView
                    android:id="@+id/imagemPreta3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fundopreto"
                    android:alpha="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutBolo4"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:background="@drawable/rectangle_background"
                android:onClick="animationClick"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:elevation="3dp">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="450dp"
                    android:layout_height="450dp"
                    android:alpha="0.3"
                    android:src="@drawable/background_personalizados"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imagemBoloTipo4"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/bolo_tipo4"
                    app:layout_constraintBottom_toTopOf="@+id/tituloBolo4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.183"
                    />

                <TextView
                    android:id="@+id/tituloBolo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/aldrich"
                    android:text="Bolos tipo 4"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    app:layout_constraintBottom_toTopOf="@+id/descricaoBolo4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.101"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imagemBoloTipo4"
                    app:layout_constraintVertical_bias="1.0"
                     />

                <TextView
                    android:id="@+id/descricaoBolo4"
                    android:layout_width="235dp"
                    android:layout_height="40dp"
                    android:text="Bolos nos sabores Ninho com nutella,Sensação,Ferrero Rocher....."
                    app:layout_constraintBottom_toTopOf="@+id/precoBolo4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <TextView
                    android:id="@+id/precoBolo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$65,00"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.064"
                    app:layout_constraintStart_toStartOf="parent"
                     />
                <ImageView
                    android:id="@+id/imagemPreta4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fundopreto"
                    android:alpha="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:textSize="10pt"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Entre em contato para mais informações" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>